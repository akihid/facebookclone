<h1>確認画面</h1>

<div class="form_border">
  <%= form_with(model:@user , local: true ,class:"form") do |f| %>
    <div class="form_group">
      <p>名前：<%= f.text_field :name ,value:@user.name ,disabled: true , class:"label_field"%></p>
    </div>
    <div class="form_group">
      <p>メールアドレス：<%= f.text_field :email ,value:@user.email ,disabled: true , class:"label_field"%></p>
    </div>
    <div class="form_group">
      <p>パスワード：<%= f.password_field :password ,value:@user.password ,disabled: true , class:"label_field"%></p>
    </div>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :password %>

    <%= f.submit "登録" ,class:"btn btn-default btn-xs"%>
    <p class="btn btn-default btn-xs" onclick="btnClick();">戻る</p>

  <% end %>

  <%= form_with(model:@user , local: true , method: 'get', url: new_user_path ,class:"form hidden_filed") do |f| %>

    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>

    <%= f.submit "戻る",name:'back' ,id:"backBtn",class:"btn btn-default btn-xs"%>

  <% end %>
</div>


