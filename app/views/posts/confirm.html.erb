<h1>確認画面</h1>

<div class="form_border">
  <%= form_with(model:@post , local:true ,url: posts_path ,class:"form") do |f|%>
  <div class="form-group">
    <p>タイトル:<%= @post.title %></p>
  </div>
  <div class="form-group">
    <pre>内容:<%= @post.content %></pre>
  </div>
    <%= f.hidden_field :title%>
    <%= f.hidden_field :content%>
  <div class="form-group">
    <%= image_tag(@post.img_path.url) if @post.img_path && @post.img_path.url %>
  </div>
    <%= f.hidden_field :img_path_cache %>

    <%= f.submit "登録",class:"btn btn-default btn-xs"%>

  <% end %>

  <%= form_with(model: @post , local: true , method: 'get' , url: new_post_path) do |f|%>
    <%= f.hidden_field :title%>
    <%= f.hidden_field :content%>
    <%= f.hidden_field :img_path_cache %>

    <%= f.submit '戻る', name: 'back',class:"btn btn-default btn-xs"%>
  <% end %>
</div>